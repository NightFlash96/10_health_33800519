<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>New Post</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body class="body climb-body">
    <%- include('partials/header') %>
    <div class="page-content">
        <div class="site-login-container">
            <h1 class="site-title">Make a post to the forum.</h1>
            <form class="site-form" action="/posted" method="POST">
            <div class="site-form-row">
                <label for="title">Post title:</label>
                <input type="text" id="title" name="title" required>
            </div>

            <div class="site-form-row">
                <label for="content">Content:</label>
                <textarea id="content" name="content" class="expandable-textarea" required></textarea>
            </div>

            <button type="submit" class="cta-btn">Post!</button>
        </form>

            <p class="site-forum-link" style="margin-top: 16px;"><a href="/">Back to home</a></p>
        </div>
    </div>
    <script>
        // Auto-expand textarea as user types
        const textareas = document.querySelectorAll('.expandable-textarea');
        textareas.forEach(textarea => {
            textarea.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = (this.scrollHeight) + 'px';
            });
        });
    </script>
</body>
</html>
