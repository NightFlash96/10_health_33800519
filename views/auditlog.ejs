<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Audit Log</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <%- include('partials/header') %>
    <h1>Audit Log</h1>
    <% if (Array.isArray(auditlogs) && auditlogs.length) { %>
        <table class="audit-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Timestamp</th>
                    <th>Username</th>
                    <th>Success</th>
                    <th>Event Type</th>
                </tr>
            </thead>
            <tbody>
            <% auditlogs.forEach(function(log) { %>
                <tr>
                    <td><%= log.id %></td>
                    <td><%= log.datetime %></td>
                    <td><%= log.username %></td>
                    <td><%= log.success ? 'True' : 'False' %></td>
                    <td><%= log.eventType %></td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No audit logs found.</p>
    <% } %>

    <p><a href="/">Back to home</a></p>
</body>
</html>
